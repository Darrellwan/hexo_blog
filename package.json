{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^20.17.0 || >=22.9.0"
  },
  "scripts": {
    "build": "hexo generate --config 'main.yml' && npm run n8n-sitemap && npm run n8n-snapshots",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server --config 'main.yml'",
    "test": "npm run clean && npm run generate_custom && npm run server_custom ",
    "generate_custom": "hexo generate --config './main.yml'",
    "server_custom": "hexo server --config './main.yml'",
    "generate": "hexo clean && hexo generate --config 'main.yml' && npm run n8n-sitemap && npm run n8n-snapshots && hexo server --config 'main.yml' ",
    "add_post": "hexo new gtm %npm_config_posttitle%",
    "test-readme": "node scripts/test-readme-generation.js",
    "restore-readme": "node scripts/restore-readme.js",
    "n8n-sitemap": "node bin/generate-n8n-sitemap.js",
    "n8n-snapshots": "node bin/generate-html-snapshots.js"
  },
  "hexo": {
    "version": "7.3.0"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "dotenv": "^16.4.7",
    "glob": "^11.0.1",
    "hexo": "^7.3.0",
    "hexo-algoliasearch": "^2.0.1",
    "hexo-clean-css": "^2.0.0",
    "hexo-deployer-git": "^4.0.0",
    "hexo-dynamic-config": "^1.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-helper-seo-structured-data": "^0.0.3",
    "hexo-related-popular-posts": "^5.0.1",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-markdown-it": "github:hexojs/hexo-renderer-markdown-it",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "hexo-tag-embed": "^1.0.0",
    "hexo-theme-landscape": "^1.1.0",
    "hexo-theme-next": "^8.22.0",
    "lightgallery": "^2.8.2",
    "punycode": "^2.3.1",
    "puppeteer": "^24.2.1",
    "rimraf": "^6.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "dayjs": "^1.11.13",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0"
  }
}
