@media (max-width: 768px) {
  .faq-container {
    margin: 20px 0;
  }

  .faq-category-title {
    font-size: 1.3em;
    margin-bottom: 16px;
  }

  .faq-item {
    border-radius: 10px;
    margin-bottom: 10px;
  }

  .faq-question {
    padding: 15px 16px;
    gap: 10px;
  }

  .faq-icon {
    font-size: 1.2em;
  }

  .faq-question-text {
    font-size: 1em;
    line-height: 1.4;
  }

  .faq-answer-content {
    padding: 16px;
  }

  .faq-answer-text {
    font-size: 0.9em;
    line-height: 1.6;
  }
}

