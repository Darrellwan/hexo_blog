// n8n Resources Page Styles
// 專門為 n8n 教學資源頁面設計的樣式

:root
  --n8n-primary: #ff6d5a
  --n8n-secondary: #20a0ff
  --n8n-background: #1a1a1a
  --n8n-text: #e0e0e0
  --n8n-border: #333
  --n8n-card-bg: #2a2a2a
  --n8n-box-shadow: rgba(0, 0, 0, 0.3)
  --n8n-box-shadow-hover: rgba(0, 0, 0, 0.4)
  --n8n-date-color: #888
  --n8n-radius: 8px

.n8n-resources-container
  max-width: 1200px
  margin: 0 auto
  padding: 20px
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
  color: var(--n8n-text)
  background-color: var(--n8n-background)
  min-height: 100vh

.n8n-header
  text-align: center
  padding: 40px 0
  margin-bottom: 30px
  background-color: var(--n8n-card-bg)
  border-radius: var(--n8n-radius)
  border-left: 5px solid var(--n8n-primary)

  h1
    color: var(--n8n-secondary)
    font-size: 2.5rem
    margin-bottom: 10px

  p
    color: var(--n8n-date-color)
    font-size: 1.2rem

.n8n-resources-content
  display: flex
  gap: 30px

.n8n-sidebar
  flex: 0 0 240px
  position: sticky
  top: 20px
  align-self: flex-start

.n8n-categories
  background-color: var(--n8n-card-bg)
  border-radius: var(--n8n-radius)
  box-shadow: 0 2px 10px var(--n8n-box-shadow)
  padding: 20px

  h2
    color: var(--n8n-secondary)
    font-size: 1.3rem
    margin-bottom: 15px
    padding-bottom: 10px
    border-bottom: 2px solid var(--n8n-primary)

  ul
    list-style: none
    padding: 0
    margin: 0

  li
    margin-bottom: 10px

  a
    color: var(--n8n-text)
    text-decoration: none
    display: block
    padding: 8px 10px
    border-radius: 4px
    transition: all 0.2s ease

    &:hover
      background-color: var(--n8n-background)
      color: var(--n8n-primary)
      transform: translateX(5px)

.n8n-main-content
  flex: 1

.n8n-section
  margin-bottom: 40px
  background-color: var(--n8n-card-bg)
  border-radius: var(--n8n-radius)
  box-shadow: 0 2px 10px var(--n8n-box-shadow)
  padding: 25px

  h2
    color: var(--n8n-secondary)
    font-size: 1.5rem
    margin-bottom: 20px
    padding-bottom: 10px
    border-bottom: 2px solid var(--n8n-primary)

.n8n-articles
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr))
  gap: 20px

.n8n-article-card
  border: 1px solid var(--n8n-border)
  border-radius: var(--n8n-radius)
  overflow: hidden
  transition: transform 0.3s ease, box-shadow 0.3s ease

  &:hover
    transform: translateY(-5px)
    box-shadow: 0 5px 15px var(--n8n-box-shadow-hover)

  img
    width: 100%
    height: 160px
    object-fit: cover

.n8n-article-info
  padding: 5px 15px

  h3
    font-size: 1.1rem
    margin-bottom: 8px

  a
    color: var(--n8n-text)
    text-decoration: none

    &:hover
      color: var(--n8n-primary)

  p
    font-size: 0.9rem
    color: var(--n8n-date-color)
    margin-bottom: 10px
    display: -webkit-box
    -webkit-line-clamp: 3
    -webkit-box-orient: vertical
    overflow: hidden

.n8n-article-meta
  display: flex
  justify-content: space-between
  font-size: 0.8rem
  color: var(--n8n-date-color)

// 響應式設計
@media (max-width: 900px)
  .n8n-resources-content
    flex-direction: column

  .n8n-sidebar
    position: static
    width: 100%

  .n8n-categories
    margin-bottom: 30px

@media (max-width: 600px)
  .n8n-header
    padding: 30px 15px

    h1
      font-size: 2rem

  .n8n-articles
    grid-template-columns: 1fr

// 導航樣式
.n8n-nav
  background-color: var(--n8n-secondary)
  border-radius: var(--n8n-radius)
  margin-bottom: 30px

  ul
    display: flex
    list-style: none
    padding: 0
    margin: 0
    overflow-x: auto

  li
    flex: 0 0 auto

  a
    color: #fff
    text-decoration: none
    padding: 15px 20px
    display: block
    white-space: nowrap
    transition: background-color 0.3s ease

    &.active, &:hover
      background-color: var(--n8n-primary)

// 搜尋樣式
.n8n-search
  position: relative
  margin-bottom: 30px

  input
    width: 100%
    padding: 12px 15px
    border: 1px solid var(--n8n-border)
    border-radius: var(--n8n-radius)
    font-size: 1rem
    outline: 0
    transition: border-color 0.3s ease, box-shadow 0.3s ease

    &:focus
      border-color: var(--n8n-primary)
      box-shadow: 0 0 0 2px rgba(255, 109, 90, 0.2)

  button
    position: absolute
    right: 10px
    top: 50%
    transform: translateY(-50%)
    background: 0 0
    border: none
    color: var(--n8n-date-color)
    cursor: pointer

    &:hover
      color: var(--n8n-primary)

// Header Flex Layout
.n8n-header-flex
  display: flex
  align-items: center
  justify-content: space-between
  gap: 24px

.social-buttons
  display: flex
  gap: 10px

.social-button
  display: flex
  align-items: center
  justify-content: center
  width: 40px
  height: 40px
  border-radius: 50%
  background: var(--n8n-card-bg)
  box-shadow: 0 2px 8px var(--n8n-box-shadow)
  border: 1px solid var(--n8n-border)
  color: var(--n8n-secondary)
  transition: box-shadow 0.2s, border 0.2s, background 0.2s, color 0.2s
  font-size: 1.2rem
  position: relative

  &:hover
    background: var(--n8n-primary)
    color: #fff
    border-color: var(--n8n-primary)
    box-shadow: 0 4px 16px rgba(255, 109, 90, 0.15)
    transform: translateY(-2px) scale(1.08)

  svg
    width: 22px
    height: 22px
    display: block

@media (max-width: 600px)
  .n8n-header-flex
    flex-direction: column
    align-items: flex-start
    gap: 12px

  .social-buttons
    align-self: flex-end