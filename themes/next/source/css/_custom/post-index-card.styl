// ============================================
// 首頁文章卡片樣式
// 左側縮圖 + 右側文字的現代編輯風格
// ============================================

// 首頁文章區塊
.posts-expand .post-block.is-index {
  border-radius: 10px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin-bottom: 16px;
  overflow: hidden;

  &:hover {
    transform: translateY(-3px);
    // 移除 hover 陰影，保持簡潔
  }

  // 隱藏首頁的 post-body（描述已經在 header 顯示）
  .post-body {
    display: none;
  }

  // 隱藏首頁的 post-footer
  .post-footer {
    display: none;
  }
}

// 文章 header - Flex 佈局（桌面版：標題和圖片並排）
.posts-expand .post-header.has-thumbnail {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  padding: 16px;
  align-items: flex-start;

  // 桌面版：標題跟著圖片，不獨佔一行
  > .post-title {
    order: 2;
    flex: 1;
    min-width: 0;
  }

  > .post-thumbnail {
    order: 1;
  }

  > .post-header-content {
    order: 3;
    width: 100%;
    flex-basis: 100%;
    margin-left: 136px;  // 120px 圖片 + 16px gap
    margin-top: -60px;   // 拉上去和標題對齊
  }
}

// 縮圖區塊
.posts-expand .post-header.has-thumbnail .post-thumbnail {
  flex-shrink: 0;
  width: 120px;
  min-width: 120px;
  aspect-ratio: 1;
  overflow: hidden;
  border-radius: 6px;
  background: #1a1a1a;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;

  &:hover {
    transform: scale(1.02);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
  }

  .post-thumbnail-link {
    display: block;
    width: 100%;
    height: 100%;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.4s ease;
  }

  &:hover img {
    transform: scale(1.03);
  }
}

// 內容區塊
.posts-expand .post-header.has-thumbnail .post-header-content {
  flex: 1;
  min-width: 0; // 防止 flex 子元素溢出
  display: flex;
  flex-direction: column;
  justify-content: center;
}

// 標題調整
.posts-expand .post-header.has-thumbnail .post-title {
  margin: 0 0 8px 0;
  padding: 0;
  font-size: 1.35rem;
  line-height: 1.4;
}

// 描述調整
.posts-expand .post-header.has-thumbnail .post-description.is-index {
  margin: 0 0 12px 0;
  font-size: 0.95rem;
  line-height: 1.6;
  color: var(--text-color-secondary, #666);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

// Meta 資訊調整
.posts-expand .post-header.has-thumbnail .post-meta {
  margin: 0;
  font-size: 0.8rem;
}

// ============================================
// 響應式設計 - 平板
// ============================================
@media (max-width: 991px) {
  .posts-expand .post-header.has-thumbnail {
    gap: 14px;
    padding: 14px;
  }

  .posts-expand .post-header.has-thumbnail .post-thumbnail {
    width: 80px;
    min-width: 80px;
    border-radius: 5px;
  }

  .posts-expand .post-header.has-thumbnail .post-title {
    font-size: 1.15rem;
  }
}

// ============================================
// 響應式設計 - 手機
// ============================================
@media (max-width: 767px) {
  .posts-expand .post-block.is-index {
    margin-bottom: 8px;
    border-radius: 0;
    box-shadow: none !important;
    background: transparent !important;
  }

  // 卡片之間用淡色分隔線
  .posts-expand .post-block.is-index + .post-block.is-index {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding-top: 8px;
  }

  // 手機版：標題在上，圖片+描述在下
  .posts-expand .post-header.has-thumbnail {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 10px 0;

    // 重置桌面版的設定
    > .post-title {
      order: 1;
      width: 100%;
      flex-basis: 100%;
      flex: none;
    }

    > .post-thumbnail {
      order: 2;
    }

    > .post-header-content {
      order: 3;
      width: auto;
      flex-basis: auto;
      flex: 1;
      margin-left: 0;
      margin-top: 0;
    }
  }

  // 標題：完整一行
  .posts-expand .post-header.has-thumbnail .post-title {
    font-size: 1.05rem;
    margin-bottom: 0;
    line-height: 1.4;
  }

  // 手機版隱藏圖片
  .posts-expand .post-header.has-thumbnail .post-thumbnail {
    display: none;
  }

  // 內容區塊：第二行右側（描述+meta）
  .posts-expand .post-header.has-thumbnail .post-header-content {
    min-width: 0;
  }

  .posts-expand .post-header.has-thumbnail .post-description.is-index {
    font-size: 0.85rem;
    line-height: 1.5;
    -webkit-line-clamp: 3;
    margin-bottom: 6px;
  }

  .posts-expand .post-header.has-thumbnail .post-meta {
    font-size: 0.7rem;
  }

  // 手機版隱藏部分 meta 項目
  .posts-expand .post-header.has-thumbnail .post-meta-item-text {
    display: none;
  }
}

// ============================================
// 暗色模式適配
// ============================================
[data-theme="dark"] {
  .posts-expand .post-header.has-thumbnail .post-thumbnail {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);

    &:hover {
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }
  }

  .posts-expand .post-header.has-thumbnail .post-description.is-index {
    color: var(--text-color-secondary-dark, #aaa);
  }
}
