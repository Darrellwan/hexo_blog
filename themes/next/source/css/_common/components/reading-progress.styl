@keyframes progressBarFlow {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.reading-progress-bar {
  background: unquote(hexo-config('reading_progress.color'));
  background-image: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.3) 25%,
    rgba(255, 255, 255, 0.4) 50%,
    rgba(255, 255, 255, 0.3) 75%,
    transparent 100%
  );
  background-size: 200% 100%;
  display: block;
  height: unquote(hexo-config('reading_progress.height'));
  left: 0;
  position: fixed;
  width: 0;
  z-index: $zindex-5;
  transition: width 0.2s ease, box-shadow 0.2s ease;
  box-shadow: 0 1px 8px rgba(0, 0, 0, 0.3),
              0 3px 15px rgba(0, 0, 0, 0.2),
              inset 0 1px rgba(255, 255, 255, 0.2);
  animation: progressBarFlow 2s linear infinite;

  &:hover {
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.4),
                0 4px 20px rgba(0, 0, 0, 0.3),
                inset 0 1px rgba(255, 255, 255, 0.3);
  }

  if (hexo-config('reading_progress.position') == 'bottom') {
    bottom: 0;
  } else {
    top: 0;
  }
}
