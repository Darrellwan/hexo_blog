div.content.post article div.post-body p a {
  color: $link-main;
  transition-property: border;
  the-transition();
}

.post-body ul {
  margin: 0px;
  list-style: none;
}
.post-body p {
  margin: 0 0 12px 0;
}

.post-toc a { border-bottom: none }
div.post-body a { border-bottom: none }

.non-border{
  border: none;
}

.orange-main-color{
  color: $orange-main;
}

mark{
  color: $orange-main;
  background-color: #00000000;
}

strong{
  color: #ffa500;
  font-weight: 800;
  font-size: 110%;
}

.max-1024 {
  max-width: 1024px;
  height: auto;
  display: block;
  margin: 0 auto;
}

.max-800 {
  max-width: 800px;
  height: auto;
  display: block;
  margin: 0 auto;
}

.max-400 {
  max-width: 400px;
  height: auto;
  display: block;
  margin: 0 auto;
}

.max-800h{
  max-height: 800px;
}

@media (min-width: 2560px) {
  .max-1024, .max-800{
    max-width: 1024px;
  }
  .max-400{
    max-width: 50%;
  }
}

@media (max-width: 2000px){
  .max-1024, .max-800{
    max-width: 80%;
  }
} 

@media (max-width: 640px){
  .max-1024, .max-800, .max-400{
    max-width: 100%;
  }
} 

.category-post{
  margin-top: 2rem;
}

.sidebar-nav .category-post-name a{
  color: $orange-main;
  border-bottom: none;
}

.sidebar-nav .sidebar-nav-active.category-post-name{
  font-size: 1rem;
  border-bottom: none;
}

.sidebar-category-post-list .sidebar-nav-active{
  border-bottom: none;
}

li.sidebar-category-post-list-item {
    text-align: left;
    padding: 0px 2px 5px 10px;
    float: left;
    font-size: $font-size-medium;
}

ul.sidebar-category-post-list {
    padding: 0; 
    line-height: 1.25rem;
}

a.sidebar-category-post-list-link{
    border-bottom: none;
}

.dar-primary-color{
  color: $orange-main;
}

.formkit-form{
  margin: auto;
}

.highlight-n8n{
  color: #ea4b71;
}