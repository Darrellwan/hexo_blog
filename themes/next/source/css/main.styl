// CSS Style Guide: http://codeguide.co/#css
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300&display=swap');

$scheme  = hexo-config('scheme') ? hexo-config('scheme') : 'Muse';

$variables = base $scheme;


// Variables Layer
// --------------------------------------------------
for $variable in $variables
  @import "_variables/" + $variable;
for $inject_variable in hexo-config('injects.variable')
  @import $inject_variable;

// Mixins Layer
// --------------------------------------------------
@import "_mixins.styl";
for $inject_mixin in hexo-config('injects.mixin')
  @import $inject_mixin;

// Dark mode colors
// --------------------------------------------------
@import "_colors.styl";

// Common Layer
// --------------------------------------------------

// Scaffolding
@import "_common/scaffolding";

// Layout
@import "_common/outline";

// Components
@import "_common/components";


// Schemes Layer
// --------------------------------------------------
@import "_schemes/" + $scheme;


// Custom Layer
// --------------------------------------------------
for $inject_style in hexo-config('injects.style')
  @import $inject_style;


.roboto_fonts {
  font-family: 'Roboto Mono';
}

div.content.post article div.post-body p a {
  color: $link-main;
  transition-property: border;
  the-transition();
}

.non-border{
  border: none;
}

.orange-main-color{
  color: $orange-main;
}

mark{
  color: $orange-main;
  background-color: #00000000;
}

strong{
  color: #ffa500;
  font-weight: 800;
  font-size: 110%;
}

@media (max-width: 2000px){
  .max-1024{
    max-width: 100%;
  }
} 


@media (min-width: 2001px){
  .max-1024{
    max-width: 1024px;
  }
} 


li.sidebar-category-post-list-item {
    text-align: left;
    padding: 0.15rem 0rem;
    float: left;
}
ul.sidebar-category-post-list {
    padding: 1rem;
}
